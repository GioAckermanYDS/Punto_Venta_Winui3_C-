<?xml version="1.0" encoding="utf-8" ?>
<Page
     x:Name="RootPage"
    x:Class="Almacen.Views.Login_Uauario.View_Login_Usuarios"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:config="using:Almacen.Estilos_Configuracion.Configuraciones.Formateo_Numeros"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:estilos="using:Almacen.Estilos_Configuracion.Estilos"
    xmlns:local="using:Almacen.Views.Login_Uauario"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"    
    mc:Ignorable="d">

    <Page.Resources>
        <config:Formato_Numeros_Colombinos x:Key="FormatoColombiano" />

        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="{Binding Tema.ColorDeLetra}" />
            <Setter Property="Background" Value="Red" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="SelectionHighlightColor" Value="Transparent" />
            <Setter Property="FocusVisualPrimaryBrush" Value="Transparent" />
            <Setter Property="FocusVisualSecondaryBrush" Value="Transparent" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <ScrollViewer
                         x:Name="ContentElement"
                         Padding="{TemplateBinding Padding}"
                         Background="{Binding Tema.FondoTersario}"
                         BorderBrush="{Binding Tema.FondoSecundario}"
                         BorderThickness="0,0,0,3"
                         CornerRadius="5,5,10,10" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
    </Page.Resources>

    <StackPanel
        Background="{Binding Tema.FondoPrimario}"
        BorderBrush="Black"
        BorderThickness="10">

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />



            </Grid.RowDefinitions>

            <StackPanel
                Grid.Row="0"
                Margin="0,50,0,30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

                <Ellipse
                    x:Name="ProfileImage"
                    Width="200"
                    Height="200">
                    <Ellipse.Fill>
                        <ImageBrush x:Name="LogoImage" Stretch="UniformToFill" />
                    </Ellipse.Fill>
                </Ellipse>

                <TextBlock
                    x:Name="Login_NombreApp"
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" />
            </StackPanel>

            <StackPanel
                Grid.Row="1"
                Width="210"
                Margin="0,0,0,20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

                <TextBlock Margin="0,0,0,4" Text="Usuario" />
                <TextBox x:Name="Text_Usuario" />

                <TextBlock Margin="0,17,0,4" Text="Contraseña"/>
                <TextBox x:Name="Text_Contraseña" />

            </StackPanel>

            <StackPanel
                Grid.Row="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Height="48"
                    Margin="10,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="{Binding ElementName=RootPage, Path=Tema.FondoPrimario}"
                    BorderBrush="{Binding ElementName=RootPage, Path=Tema.FondoPrimario}"
                    BorderThickness="2"
                    Click="Btn_IniciarSesion_Click"
                    CornerRadius="25"
                    FontSize="19">
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <!--  Ícono  -->
                        <FontIcon
                            Margin="0,0,10,0"
                            FontSize="24"
                            Foreground="{Binding ElementName=RootPage, Path=Tema.ColorDeLetra}"
                            Glyph="&#xF103;" />
                        <!--  Texto  -->
                        <TextBlock
                            VerticalAlignment="Center"
                            Foreground="{Binding ElementName=RootPage, Path=Tema.ColorDeLetra}"
                            Text="Ingresar" />
                    </StackPanel>
                </Button>


                <Button
                    Height="48"
                    Margin="10,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="{Binding ElementName=RootPage, Path=Tema.FondoPrimario}"
                    BorderBrush="{Binding ElementName=RootPage, Path=Tema.FondoPrimario}"
                    BorderThickness="2"
                    Click="Btn_Cancelar_Inicio_Click"
                    CornerRadius="25"
                    FontSize="19">
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <!--  Ícono  -->
                        <FontIcon
                            Margin="0,0,10,0"
                            FontSize="24"
                            Foreground="{Binding ElementName=RootPage, Path=Tema.ColorDeLetra}"
                            Glyph="&#xF3B1;" />
                        <!--  Texto  -->
                        <TextBlock
                            VerticalAlignment="Center"
                            Foreground="{Binding ElementName=RootPage, Path=Tema.ColorDeLetra}"
                            Text="Cerrar" />
                    </StackPanel>
                </Button>
            </StackPanel>




        </Grid>


    </StackPanel>

</Page>
